<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:background="#abc777"
    android:layout_height="60dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/layout_tab_icon_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:text="111"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_tab_icon_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/layout_tab_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:background="@tools:sample/backgrounds/scenic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_tab_icon_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>

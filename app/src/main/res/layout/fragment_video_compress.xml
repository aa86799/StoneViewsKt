<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/fragment_video_compress_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择视频"
            app:layout_constraintBottom_toTopOf="@id/fragment_video_compress_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/fragment_video_compress_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_video_compress_choose" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
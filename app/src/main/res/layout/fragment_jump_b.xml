<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_jb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前是 B"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_jb_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="info"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_jb_title"/>

    <Button
        android:id="@+id/btn_jb_to_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到A"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_jb_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_jb_to_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到C"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_jb_to_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
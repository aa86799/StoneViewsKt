<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--   android:textAllCaps="false" 全有帽子(大写) false  -->
        <Button
            android:id="@+id/btnColorPlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color Plate"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/btnColorMatrix"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnColorMatrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="color matrix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnColorPlate" />

        <Button
            android:id="@+id/btnImageMatrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="image matrix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnColorPlate" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
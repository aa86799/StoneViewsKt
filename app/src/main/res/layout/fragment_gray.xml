<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.stone.stoneviewskt.ui.gray.InjectGrayWebView
        android:id="@+id/fragment_gray_wv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintBottom_toTopOf="@id/fragment_gray_iv"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_gray_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_gray_wv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher"/>
</androidx.constraintlayout.widget.ConstraintLayout>